{
    "compilerOptions": {
        "sourceMap": true,
        "esModuleInterop": true,
        "allowJs": true,
        "noImplicitAny": true,
        "strict": true,
        "moduleResolution": "node",
        "rootDir": "./src",
        "module": "commonjs",
        "target": "es6",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "typeRoots": [
            "node_modules/@types",
            "src/types"
        ],
        "outDir": "./dist/debug/ts-app",
        "resolveJsonModule": true
    },
    "include": [
        "./src/**/*",
        "./src/assets/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}